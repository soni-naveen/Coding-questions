public class selectionSort {

  public static void main(String[] args) {
    int arr[] = {2,1,4,0,5,8};
    for(int i=0; i<arr.length-1; i++){
      int minIdx = i;
      for(int j=i+1; j<arr.length; j++){
        if(arr[j] < arr[minIdx]){
          minIdx = j;
        }
      }
      int temp = arr[i];
      arr[i] = arr[minIdx];
      arr[minIdx] = temp;
    }
    
    for (int i = 0; i < arr.length; i++) {
      System.out.print(arr[i] + "");
    }
  } 
}
